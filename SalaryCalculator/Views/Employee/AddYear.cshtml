@using SalaryCalculator.Core.Models
@model AddYearViewModel

@{
    ViewBag.Title = "Add Year";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
             <div class="mb-3">
                <label asp-for="@Model.Year" class="form-label">Year</label>
                <input asp-for="@Model.Year" class="form-control" aria-required="true" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.MinimumThreshold" class="form-label">Minimum Threshold</label>
                <input asp-for="@Model.MinimumThreshold" class="form-control" aria-required="true" />
                <span asp-validation-for="MinimumThreshold" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.MaximumThreshold" class="form-label">Maximum Threshold</label>
                <input asp-for="@Model.MaximumThreshold" class="form-control" aria-required="true" />
                <span asp-validation-for="MaximumThreshold" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.IncomeТaxPercentage" class="form-label">Income Тax Percentage</label>
                <input asp-for="@Model.IncomeТaxPercentage" class="form-control" value="" />
                <span asp-validation-for="IncomeТaxPercentage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.HealthInsurancePercentage" class="form-label">Health Insurance Percentage</label>
                <input asp-for="@Model.HealthInsurancePercentage" class="form-control" value="" />
                <span asp-validation-for="HealthInsurancePercentage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
